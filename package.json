{
	"name": "swagger-bot",
	"displayName": "Swagger Bot",
	"description": "Automating openAPI specs from your editor.",
	"author": {
		"name": "Aaron Dov Turkel"
	},
	"version": "0.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:swagger-bot.generateComponent"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "swagger-bot.generateComponent",
				"title": "Generate Component"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "swagger-bot.generateComponent",
					"when": "editorLangId == json"
				}
			]
		},
		"keybindings": [
			{
				"command": "swagger-bot.generateComponent",
				"key": "ctrl+alt+v",
				"mac": "cmd+alt+v",
				"when": "editorLangId == json"
			}
		],
		"configuration": {
			"title": "Swagger Bot",
			"properties": {
				"swagger-bot.arrayType": {
					"type": "string",
					"default": "anyOf",
					"enum": [
						"anyOf",
						"allOf",
						"oneOf"
					],
					"description": "Specify the type of dynamic array generated."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
