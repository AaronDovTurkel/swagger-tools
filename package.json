{
	"name": "swagger-tools",
	"displayName": "Swagger Tools",
	"publisher": "TheHolyCoder",
	"description": "Automating openAPI specs from your editor.",
	"author": {
		"name": "Aaron Dov Turkel"
	},
	"icon": "images/swagger-tools-logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/AaronDovTurkel/swagger-tools.git"
	},
	"version": "0.1.0",
	"license": "MIT",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Snippets",
		"Other"
	],
	"keywords": [
		"swagger",
		"openapi",
		"tools",
		"generator",
		"typescript",
		"specs",
		"postman",
		"api",
		"angular"
	],
	"activationEvents": [
		"onCommand:swagger-tools.pasteSchema"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "swagger-tools.pasteSchema",
				"title": "Paste Schema"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "swagger-tools.pasteSchema",
					"when": "editorLangId == json"
				}
			]
		},
		"keybindings": [
			{
				"command": "swagger-tools.pasteSchema",
				"key": "ctrl+alt+v",
				"mac": "cmd+alt+v",
				"when": "editorLangId == json"
			}
		],
		"configuration": {
			"title": "Swagger Tools",
			"properties": {
				"swagger-tools.arrayType": {
					"type": "string",
					"default": "oneOf",
					"enum": [
						"oneOf",
						"anyOf",
						"allOf",
						"not"
					],
					"description": "Specify the type of dynamic array generated."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
